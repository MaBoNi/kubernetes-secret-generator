# Enhanced .env file demonstrating multiple supported formats
# This tool now supports various .env file formats for maximum compatibility

## COMMON SECRETS - Standard KEY=value format ##
DEBUG=false
LOG_LEVEL="INFO"  # Quoted values for strings with special chars
API_HOST=http://api-app:5070
APP_ENV='production'  # Single quotes also supported

## DATABASE SECRETS - Mixed formats ##
DB_USER=myuser
DB_PASSWORD="p@ssw0rd!"  # Quotes recommended for passwords with special chars
DB_HOST: localhost      # Colon format (original style) still supported
DB_PORT: "5432"
DB_NAME='myapp_db'
DefaultConnection="Host=main-rds.XXX.eu-central-1.rds.amazonaws.com;Port=5432;Username=db_user;Password=db_password;Database=db_name"

## BACKEND SECRETS - Different quote styles ##
BACKEND_API_BASE=https://example.com/v1/api
BACKEND_USER: "integration-user"
BACKEND_PASSWORD: 'VerySecretPassword123!'

## SALESFORCE SECRETS - Demonstrating inline comments ##
SALESFORCE_DOMAIN="productionservice.my.salesforce.com"  # Production domain
SALESFORCE_USERNAME=service.account@company.com
SALESFORCE_PASSWORD: "SuperSecretPassword!"
SALESFORCE_CLIENT_ID='3MVG9fMtCkV6eLheIEZplMqWfnGlf3Y'  # OAuth client ID
SALESFORCE_CLIENT_SECRET: "1234567890abcdef"
SALESFORCE_API_VERSION=v61.0

## AWS SECRETS - Empty value examples ##
AWS_REGION=eu-central-1
AWS_S3_BUCKET=  # Empty value - will be filled later
AWS_ACCESS_KEY_ID:
AWS_SECRET_ACCESS_KEY=""  # Explicitly empty

# Special characters in values are properly handled
SPECIAL_CONFIG='{"database": "postgres", "port": 5432, "ssl": true}'
URL_WITH_HASH="https://example.com/api#section"
EMAIL_TEMPLATE: "Welcome {{user.name}} to our service!"

# Comments are ignored, empty lines too

# This demonstrates the enhanced parsing capabilities:
# ✅ KEY=value (standard format)
# ✅ KEY="value" (double quotes)
# ✅ KEY='value' (single quotes) 
# ✅ KEY: value (colon format)
# ✅ KEY: "value" (colon with quotes)
# ✅ Comments with # (ignored)
# ✅ Inline comments: KEY=value # comment
# ✅ Empty values: KEY= or KEY:
# ✅ Special characters in values
# ✅ JSON strings as values
